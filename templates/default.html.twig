{% extends "base.html.twig" %}

{% block body %}

<div class="main" style="width: 50%; margin: 0 auto; padding-top: 50px;">

    <form class="example" method="POST" action="./api">
        <div class="form-group">
            <label for="exampleInputEmail1" style="font-size: 30px; font-weight: bold;">Movies search engine by Marcin Witaszczyk</label>
        </div>

        <BR>

        <div class="form-group">
            <label for="exampleMinDate">Select Date</label>
            <BR>
            <input type="datetime-local" value="2017-06-01T08:30" class="form-control" id="exampleMinDate" name="min_release_date" aria-describedby="minHelp">
            <small id="emailHelp" class="form-text text-muted">From</small>
            <BR>
            <input type="datetime-local" value="2019-06-01T08:30" class="form-control" id="exampleMaxDate" name="max_release_date" aria-describedby="maxHelp">
            <small id="maxHelp" class="form-text text-muted">To</small>
        </div>

        <BR>

        <div class="form-group">
            <label for="exampleSelect1">Genre</label>
            <select name="genre" class="form-control" id="exampleSelect1">
                <option selected>Action</option>
                <option>Thriller</option>
                <option>Comedy</option>
                <option>Horror</option>
                <option>All</option>
            </select>
        </div>

        <BR>

        <div class="form-group">
            <label for="exampleSelect2">Rating (select multiple use ctrl)</label>
            <select multiple class="form-control" name="rating[]" id="exampleSelect2" style="height: 130px;">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4" selected>4</option>
                <option value="5" selected>5</option>
            </select>
        </div>

        <fieldset class="form-group">
            <legend>Sorting</legend>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="sort" id="ASC" value="ASC" checked>
                    View from the oldest to the newest
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="sort" id="DESC" value="DESC">
                    View from the newest to the oldest
                </label>
            </div>
        </fieldset>

        <fieldset class="form-group">
            <legend>Response</legend>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="responseData" id="datatable" value="datatable" checked>
                    Datatable
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="responseData" id="json" value="json">
                    Json
                </label>
            </div>
        </fieldset>

        <button type="submit" class="btn btn-primary">Search</button>
    </form>


</div>

{% endblock %}
